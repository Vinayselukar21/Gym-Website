extends base.pug

block style 
    style
        include ../static/contact.css

block content 
    div.container 
        h2 Contact Us
            form(action="/contact", method="post", id="contact") 
                input(type='text' id="name" name='name' placeholder='Enter your name.')
                input(type='number' id="name" name='phone' placeholder='Enter your number.')
                input(type='text' id="name" name='age' placeholder='Enter your age.')
                input(type='text' id="name" name='gender' placeholder='Enter your gender.')
                input(type='email' id="name" name='email' placeholder='Enter your email. (eg. example@gmail.com)')
                textarea(name='concern' id="name" cols='30' rows='5' placeholder='Enter your concern')
                button(class="btn")
                    | Submit
